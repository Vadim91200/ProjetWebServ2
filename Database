CREATE TABLE utilisateur
(
    id INTEGER PRIMARY KEY NOT NULL,
    nom VARCHAR(100) NOT NULL,
    prenom VARCHAR(100) NOT NULL,
    email VARCHAR(255) NOT NULL,
    mot_de_passe VARCHAR(255) NOT NULL,
    telephone VARCHAR(10) NOT NULL
);


CREATE TABLE produit
(
    id INTEGER PRIMARY KEY NOT NULL,
    nom_produit VARCHAR(100) NOT NULL,
    description VARCHAR(255),
    prix INT NOT NULL,
    date_creation DATE NOT NULL,
    date_fin_offre DATE
);


CREATE TABLE categorie
(
    id INTEGER PRIMARY KEY NOT NULL,
    nom_categorie VARCHAR(100) NOT NULL 
);


CREATE TABLE categorie_correspondante
(
    id_produit INTEGER NOT NULL,
    id_categorie INTEGER NOT NULL,
    CONSTRAINT PK_Person PRIMARY KEY (id_produit, id_categorie),
	CONSTRAINT FK_IdProduit FOREIGN KEY(id_produit) REFERENCES produit(id),
    CONSTRAINT FK_IdCategorie FOREIGN KEY(id_categorie) REFERENCES categorie(id)
)
